<%- include('partials/header', { title: 'Home' }) %>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Book Collection</h2>
        <a href="/books/add" class="btn btn-success">+ Add Book</a>
    </div>

    <div class="row">
        <% books.forEach(book => { %>
            <div class="col-lg-6 col-md-8 col-sm-12 mb-4">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img 
                                src="<%= book.cover_url %>" 
                                class="img-fluid rounded-start card-img" 
                                alt="<%= book.title %>">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body position-relative">
                                <h5 class="card-title"><%= book.title %></h5>
                                <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                                <p class="card-text"><strong>Rating:</strong> <%= book.rating %>/5</p>
                                <p class="card-text"><strong>Read Date:</strong> <%= book.read_date.toISOString().split('T')[0] %></p>
                                <p class="card-text"><strong>Review:</strong> <%= book.review %></p>
                                <a href="/notes/<%= book.id %>" class="btn btn-primary btn-sm position-absolute" style="bottom: 10px; right: 10px;">Read My Notes</a>
                                <div class="d-flex gap-2 mt-3">
                                    <a href="/books/edit/<%= book.id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/books/delete/<%= book.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>
