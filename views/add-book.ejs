<%- include('partials/header', { title: 'Add Book' }) %>

<div class="container mt-5">
  <h2 class="mb-4 text-center">Add a New Book</h2>
  <form action="/books/add" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>
    <div class="mb-3">
      <label for="author" class="form-label">Author</label>
      <input type="text" class="form-control" id="author" name="author" required>
    </div>
    <div class="mb-3">
      <label for="cover_id" class="form-label">Cover ID (OpenLibrary)</label>
      <input type="text" class="form-control" id="cover_id" name="cover_id" required>
    </div>
    <div class="mb-3">
      <label for="review" class="form-label">Review</label>
      <textarea class="form-control" id="review" name="review" rows="4" required></textarea>
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">Rating (1-5)</label>
      <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" required>
    </div>
    <div class="mb-3">
      <label for="read_date" class="form-label">Read Date</label>
      <input type="date" class="form-control" id="read_date" name="read_date" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Book</button>
  </form>
</div>

<%- include('partials/footer') %>